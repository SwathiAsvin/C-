#include <iostream>
#include <string>
using namespace std;

int main() {
    string str, reversed;
    cout << "Enter a string: ";
    cin >> str;

    reversed = string(str.rbegin(), str.rend());
    if (str == reversed)
        cout << str << " is a palindrome." << endl;
    else
        cout << str << " is not a palindrome." << endl;

    return 0;
}
